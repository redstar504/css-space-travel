{% extends 'layouts/main.twig' %}
{% set pageId = 'destinationPage' %}

{% block content %}
    <main>
        <h2 id="pageTitle">
            <strong>01</strong>
            Pick Your Destination
        </h2>

        <div id="planetWrapper">
            <img class="planet" src="/src/assets/destination/image-moon.png" alt="the moon"/>
        </div>

        <ul id="destinationList">
            <li class="selected">
                <a href="#"><small>Moon</small></a>
            </li>
            <li>
                <a href="#"><small>Mars</small></a>
            </li>
            <li>
                <a href="#"><small>Europa</small></a>
            </li>
            <li>
                <a href="#"><small>Titan</small></a>
            </li>
        </ul>

        <h3>Moon</h3>

        <p>
            Discover Earth from an unparalleled vantage point on a rejuvenating lunar retreat. Immerse yourself in
            history by exploring the Luna 2 and Apollo 11 landing sites, ensuring a unique blend of relaxation and
            historical enrichment.
        </p>

        <div class="hr"></div>

        <ul id="destinationStats">
            <li>
                <small class="xs">Avg. Distance</small>
                <em class="lg">384,400 km</em>
            </li>
            <li>
                <small class="xs">Est. Travel Time</small>
                <em class="lg">3 days</em>
            </li>
        </ul>
    </main>
{% endblock %}